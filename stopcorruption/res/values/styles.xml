<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
        <style name="Theme.App" parent="@android:style/Theme.Holo.Light">
        <item
            name="android:windowBackground">@drawable/grey_background_pattern</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:textAppearance">@style/DefaultText</item>
        <item name="android:textAppearanceLarge">@style/Heading</item>
        <item name="android:textAppearanceMedium">@style/SubHeading</item>
    </style>


    <style name="DefaultText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="GuessWordText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    

    <style name="Heading" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SubHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HelpText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="HelpText.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="HelpText.Caption">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
<style name="AppTheme" parent="android:Theme.Light" >
    </style>
   	<style name="PlayerNameFont" parent="@android:style/TextAppearance.Large">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="YouScoredFont" parent="@android:style/TextAppearance.Large">
   	    <item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="ScoreFont" parent="@android:style/TextAppearance.Medium">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
    <style name="GameOverFont">
        <item name="android:textSize">50sp</item>
       	<item name="android:textColor">#FFFFFF</item>
       	<item name="android:textStyle">bold</item>
   	</style>
   	<style name="ScoreboardPlayerNameFont" parent="@android:style/TextAppearance.Medium">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="ScoreboardPlayerScoreFont" parent="@android:style/TextAppearance.Small">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="RequestPlayerNameFont" parent="@android:style/TextAppearance.Medium">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   		<style name="fb_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="login_button" parent="@style/fb_button">
		<item name="android:background">@drawable/login_button</item>
	</style>
	<style name="logout_button" parent="@style/fb_button">
		<item name="android:background">@drawable/logout_button</item>
	</style>
</resources>
