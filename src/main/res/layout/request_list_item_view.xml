<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/requestListItemProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_holder_invert" />
		     
    <TextView
        android:id="@+id/requestListItemName"
        style="@style/RequestPlayerNameFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
		android:paddingLeft="58dp"
        />

    <ImageView
        android:id="@+id/requestListItemCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checkbox_cold" 
		android:paddingTop="25dp"
		android:paddingLeft="58dp"
        />

</RelativeLayout>